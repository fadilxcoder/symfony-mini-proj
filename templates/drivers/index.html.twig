{% extends 'base.html.twig' %}

{% block title %}Drivers{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <section id="page-title-area" class="section-padding overlay">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title  text-center">
                        {{ sectionify('Our Drivers', 'Lorem ipsum dolor sit amet, consectetur adipisicing elit fideles.') }}
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!--== Driver Page Content Start ==-->
    <section id="driver-page-wrap" class="section-padding">
        <div class="container">
            <div class="row">
                {% for _driver in drivers %}
                <!-- Single Driver Start-->
                <div class="col-lg-4 col-md-6">
                    <div class="single-driver-member">
                        <img src="{{ asset('images/driver/' ~ _driver.avatar ) }}" alt="{{ _driver.name}}">
                        <div class="driver-mem-info">
                            <h4>{{ _driver.name}} <span>{{ _driver.title }}</span></h4>
                        </div>
                    </div>
                </div>
                <!-- Single Driver End -->
                {%  endfor %}
            </div>
        </div>
    </section>
    <!--== Driver Page Content End ==-->
{% endblock %}

{% block modals %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('script') }}
{% endblock %}